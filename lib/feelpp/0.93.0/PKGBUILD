build() {
	cd "${srcdir}/${pkgname//++/pp}-${pkgname//++/pp}-$pkgver"
	#./configure --prefix=/usr
        mkdir -p build
        cd build
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/opt/feelpp ../
        cd feel
        make
}


package() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make DESTDIR="$pkgdir/" install
        cd build/feel/
        make install
}

